{
    "debug": true,
    "accumulate_step": 16,
    "batch_size": 2,
    "eval_batch_size": 1,
    "eval_period": 1,

    "bert_cache_dir": "./bert",
    "bert_dropout": 0.0,
    "bert_learning_rate": 5e-05,
    "bert_model_name": "facebook/bart-base",
    "bert_weight_decay": 1e-05,

    "decoding_method": "beam_search",
    "train_file": "data/train.jsonl",
    "dev_file": "data/dev.jsonl",
    "test_file": "data/test.jsonl",

    "SOT_weights":5,
    "max_position_embeddings":1024,
    "grad_clipping": 5.0,
    "log_path": "./log/baseline",
    "k":10,
    "max_epoch": 200,
    "warmup_epoch": 5,
    "weight_decay": 0.001,
    "max_length": 512,

    "num_beams":1,

    "output_path": "./output/baseline",
    "use_copy": true,
    "per_declaration" : true,
    "use_prompt": true,

    "use_extra_bert": true,
    "use_gpu": true,
    "gpu_device": 0
}
